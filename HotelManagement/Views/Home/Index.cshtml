<link rel="icon" href="~/Images/PageImages/NCHS_ICON.Ico" type="image/x-icon">
<div class="panel panel-default" style="border-top-width:medium;border-top-color:#0a5683;width:45%;margin:auto;margin-top:25vh;box-shadow: 2px 2px 8px #888888;">
    <div class="panel-heading">
        <h3 class="panel-title"></h3>
    </div>

    <div>
        <center>
            <img src="~/Images/Hotel.png" style="margin:40px;max-width:50%" />

            @*<img src="~/Images/PageImages/NCHS_Full_Logo.png" />*@
        </center>
    </div>

    <div style="width:60%;margin:auto">
        <form action="/Login/UserLoginCheck" method="post">
            <div class="row">
                <div class="col-md-12  form-group">
                    <div class="input-group ">
                        <div class="input-group-addon">
                            <i class="fa fa-user-o"></i>  Username
                        </div>
                        <input type="text" name="Username" class="form-control" id="login_username" required>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-key"></i> Password
                        </div>
                        <input type="password" name="Password" class="form-control" id="login_password" required>
                    </div>
                </div>
            </div>


            <center>
                <button class="btn btn-default " >
                    <i class="fa fa-sign-in"></i> Log In
                    @*<button type="submit" class="btn btn-default">Submit</button>*@
                </button>

            </center>

        </form>

    </div>

    <center><div class="text-warning"><strong>@TempData["Login_Message"]</strong></div></center>



</div>
<div>
    <center>
        <img src="~/Images/PageImages/NCHSLOGO SE.png" style="margin:40px;width:15%" />
    </center>
</div>
